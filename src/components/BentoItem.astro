---
interface Props {
    class?: string
    title?: string
}

const { title } = Astro.props
---

<article title={ title } class={`
    ${Astro.props.class}
    rounded-lg
    border-b border-b-gray-600/50
    shadow-lg
    col-span-full
    bg-gray-900 bg-opacity-80
    
    ${(title === 'Image') ? 'p-2' : 'px-4 py-2'}
    ${(title === 'Stats' || title === 'Growth Rates' || title === undefined) ? 'relative overflow-x-auto p-0' : ''}
`}>
    { (title !== 'Image' && title !== 'Bio' && title !== 'Stats' && title !== 'Growth Rates' && title !== undefined) ? <h2 class="mb-2 text-lg font-semibold">{ title }</h2> : null }
    <slot></slot>
</article>