---
interface Props {
  tableType: string
  id: string
  title: string
  character?: any
}

const { tableType, id, title, character } = Astro.props
---
<article title={ title } class="relative p-0 overflow-x-auto bg-gray-900 bg-opacity-75 border-b rounded-lg shadow-md  border-b-gray-500/50 col-span-full md:col-span-6 md:row-span-1" 
>
  <table id={id} class="w-full text-xs text-center text-gray-400 bg-gray-700 sm:text-sm">
    <thead>
      <tr>
        <th class="text-md" colspan="10">{title}</th>
      </tr>  
      <tr>
          <th>HP</th>
          <th>STR</th>
          <th>MAG</th>
          <th>DEX</th>
          <th>SPD</th>
          <th>DEF</th>
          <th>RES</th>
          <th>LCK</th>
          <th>BLD</th>
          <th>MOV</th>
        </tr>
    </thead>
    <tbody>
      <tr class="bg-gray-800">
        { 
        (tableType === 'Base') 
        ? 
          (id === 'baseStats') 
          ?
            <td>{character.BaseHp}</td>
            <td>{character.BaseStr}</td>
            <td>{character.BaseMag}</td>
            <td>{character.BaseDex}</td>
            <td>{character.BaseSpd}</td>
            <td>{character.BaseDef}</td>
            <td>{character.BaseRes}</td>
            <td>{character.BaseLck}</td>
            <td>{character.BaseBld}</td>
            <td>{character.BaseMov}</td>
          :
            <td>{character.GrowthHp}</td>
            <td>{character.GrowthStr}</td>
            <td>{character.GrowthMag}</td>
            <td>{character.GrowthDex}</td>
            <td>{character.GrowthSpd}</td>
            <td>{character.GrowthDef}</td>
            <td>{character.GrowthRes}</td>
            <td>{character.GrowthLck}</td>
            <td>{character.GrowthBld}</td>
            <td>-</td>
        :
          <td>-</td>
          <td>-</td>
          <td>-</td>
          <td>-</td>
          <td>-</td>
          <td>-</td>
          <td>-</td>
          <td>-</td>
          <td>-</td>
          <td>-</td>
        }
      </tr>
    </tbody>
  </table>
</article>